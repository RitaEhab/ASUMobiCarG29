analogWrite(enable1,120);
analogWrite(enable2,120);

if (Serial.available()>0)
{
command=Serial.read();
//Serial.print(command);
}
if(command=='A')
{ data="";
com2=0;
while(1)
{
if (Serial.available()>0)
{ 
value=Serial.read();

// Serial.println ("value = ");
